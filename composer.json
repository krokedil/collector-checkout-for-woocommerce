{
    "name": "krokedil/walley-checkout-for-woocommerce",
    "description": "Extends WooCommerce. Provides a <a href=\"https://www.walley.se/foretag/checkout/\" target=\"_blank\">Walley Checkout</a> checkout for WooCommerce.",
    "type": "wordpress-plugin",
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0",
        "php-stubs/woocommerce-stubs": "^8.2",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "license": "GPL-v3",
    "require": {
        "php": "~7.4 || ~8.0",
        "krokedil/shop-widgets": "^0.1.0",
        "krokedil/woocommerce": "^1.0"
    },
    "repositories": {
        "krokedil/shop-widgets": {
            "type": "vcs",
            "url": "git@github.com:krokedil/shop-widgets.git"
        },
        "krokedil/woocommerce": {
            "type": "vcs",
            "url": "git@github.com:krokedil/woocommerce.git"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs . --standard=phpcs.xml --extensions=php -q",
        "lint:fix": "vendor/bin/phpcbf . --standard=phpcs.xml --extensions=php -q",
        "lint:changes": "git diff --name-only HEAD~1 | grep '\\.php$' | xargs vendor/bin/phpcs --standard=phpcs.xml --extensions=php -q",
        "lint:fix:changes": "git diff --name-only HEAD~1 | grep '\\.php$' | xargs vendor/bin/phpcbf --standard=phpcs.xml --extensions=php -q"
    }
}
